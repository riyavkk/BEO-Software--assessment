{
  "name": "job-matching-platform",
  "version": "1.0.0",
  "description": "Backend system for a job matching platform with Azure AD B2C authentication",
  "main": "dist/server.js",
  "scripts": {
    "prebuild": "node scripts/check-node-version.js",
    "prestart": "node scripts/check-node-version.js",
    "predev": "node scripts/check-node-version.js",
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "migrate": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "generate-token": "tsx scripts/generate-test-token.ts"
  },
  "keywords": [
    "job-matching",
    "azure",
    "postgresql",
    "pgvector"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@azure/msal-node": "^2.6.0",
    "@azure/service-bus": "^7.9.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "pgvector": "^0.1.8",
    "redis": "^4.6.12",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "express-async-errors": "^3.1.1",
    "ejs": "^3.1.9"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.10.9",
    "@types/ejs": "^3.1.5",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "node-pg-migrate": "^6.2.2"
  }
}

